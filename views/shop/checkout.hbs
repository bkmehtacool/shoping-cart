<div class="row">
    <div class="col-sm-4 col-md-4 col-md-offset-4 col-sm-offset-4">
        <h1>Checkout</h1>
        <h4>Your total : ${{total}}</h4>
        <div class="alert alert-danger {{#if noError}}hidden{{/if}} " id="charge-error">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="">Name</label>
                        <input type="text" class="form-control" class="" placeholder="" id="name" name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="">Address</label>
                        <input type="text" class="form-control" class="" placeholder="" id="address" name="address">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="">Card Holder Name</label>
                        <input type="text" class="form-control" class="" placeholder="" id="card-name" name="card-name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="">Credit Card Number</label>
                        <input type="text" class="form-control" class="" placeholder="" id="card-number" name="card-number">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="">Expiration Month</label>
                        <input type="text" class="form-control" class="" placeholder="" id="card-expiry-month" name="card-expiry-month">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="">Expairation Year</label>
                        <input type="text" class="form-control" class="" placeholder="" id="card-expiry-year" name="card-expiry-year">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="">CVC</label>
                        <input type="text" class="form-control" class="" placeholder="" id="card-cvc" name="card-cvc">
                    </div>
                </div>
                <div class="col-xs-12">
                    <button type="submit" name="button" class="btn btn-success btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>